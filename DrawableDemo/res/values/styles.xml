<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	<style name="AppBaseTheme" parent="android:Theme.Light">
		<!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
		-->
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
		
		
		
		<!-- !!!! NOTE NOTE NOTE NOTE !!!! -->
		<!-- This will apply the style to ALL new buttons created.
		      There are about 18K themes, get the one that you want from here:
		      http://omapzoom.org/?p=platform/frameworks/base.git;a=blob;f=core/res/res/values/themes.xml;hb=master --> 
		
		<!-- item name="buttonStyle">@android:style/NiceButton</item -->

        <!-- !!!! NOTE NOTE NOTE NOTE !!!! -->
		<!-- These button styles were introduced in API 11, so you have to add this to ../values-11/styles.xml file -->
		
		
		
	</style>

	<style name="NiceButton">
		<item name="android:background">@drawable/states_nice_button</item>
		<item name="android:textColor">#1485CC</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:autoLink">web</item>
        </style>
	
   <style name="NiceButton.Large" parent="NiceButton">
        <item name="android:textSize">32sp</item>
    </style>
	
</resources>
